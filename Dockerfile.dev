FROM node:18-alpine

WORKDIR /app

# Copiar archivos de dependencias
COPY package*.json ./

# Instalar todas las dependencias (incluyendo devDependencies)
# Configurar para omitir husky en contenedores
ENV HUSKY=0
RUN npm ci

# Copiar c√≥digo fuente
COPY . .

# Exponer el puerto
EXPOSE 3000

# Comando de inicio para desarrollo
CMD ["npm", "run", "dev"]
